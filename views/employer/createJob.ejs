<%- layout('/layouts/boilerplate.ejs') -%>

<div class="main-content">
  <div class="form-container">
    <div class="text-center mb-4">
      <i class="bi bi-briefcase-fill d-block fs-1 text-success"></i>
      <h1 class="form-title mt-2" style="color: #212529 !important;">Post a New Job</h1>
    </div>
    <p class="form-subtitle">Share your project and connect with skilled freelancers</p>

    <form method="POST" action="/jobs" novalidate class="needs-validation">
      <div class="row g-3">

        <!-- Job Title -->
        <div class="col-md-12 form-row">
          <label for="title" class="form-label">
            <i class="bi bi-pencil-square me-2"></i>Job Title
          </label>
          <input type="text" class="form-control" id="title" name="job[title]" placeholder="Enter job title" required>
          <div class="invalid-feedback">This field is required!</div>
        </div>

        <!-- Description -->
        <div class="col-md-12 form-row">
          <label for="description" class="form-label">
            <i class="bi bi-card-text me-2"></i>Job Description
          </label>
          <textarea class="form-control" id="description" name="job[description]" rows="4" maxlength="1000"
                    placeholder="Describe the job requirements, responsibilities, and expectations..." required></textarea>
          <small class="form-text text-muted">Maximum 1000 characters.</small>
          <div class="invalid-feedback">This field is required!</div>
        </div>

        <!-- Budget -->
        <div class="col-md-12 form-row">
          <label for="budget" class="form-label">
            <i class="bi bi-currency-rupee me-2"></i>Budget
          </label>
          <div class="input-group">
            <span class="input-group-text">(â‚¹)</span>
            <input type="number" class="form-control" id="budget" name="job[budget]" placeholder="Enter amount" min="1" required>
          </div>
          <small class="form-text text-muted">Enter the maximum budget for this job</small>
          <div class="invalid-feedback">This field is required!</div>
        </div>

        <!-- Deadline -->
        <div class="col-md-12 form-row">
          <label for="deadline" class="form-label">
            <i class="bi bi-calendar3 me-2"></i>Deadline
          </label>
          <input type="date" class="form-control" id="deadline" name="job[deadline]" required>
          <small class="form-text text-muted">When should this job be completed?</small>
          <div class="invalid-feedback">This field is required!</div>
        </div>

        <!-- Required Skills -->
        <div class="col-md-12 form-row">
          <label for="requiredSkills" class="form-label">
            <i class="bi bi-tools me-2"></i>Required Skills
          </label>
          <input type="text" class="form-control" id="requiredSkills" name="job[requiredSkills]"
                 placeholder="Enter required skills (comma-separated)" required />
          <small class="form-text text-muted">E.g., JavaScript, React, Node.js</small>
          <div class="invalid-feedback">This field is required!</div>
        </div>

        <!-- Status -->
        <div class="col-md-12 form-row">
          <label for="status" class="form-label">
            <i class="bi bi-toggle-on me-2"></i>Status
          </label>
          <select class="form-select" id="status" name="job[status]" required>
            <option value="Open" selected>Open</option>
            <option value="Closed">Closed</option>
          </select>
        </div>

        <!-- Submit -->
        <div class="col-12 text-center">
          <button type="submit" class="styled-button mt-3">
            <i class="bi bi-plus-circle me-2"></i>Create Job
          </button>
        </div>

      </div>
    </form>
  </div>
</div>
