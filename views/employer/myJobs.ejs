<%- layout('/layouts/boilerplate.ejs') -%>

<body class="bg-light">
  <div class="container py-5">

    <!-- Job Listings -->
    <div class="mb-5">
      <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
        <h4 class="mb-3 mb-md-0"><i class="bi bi-briefcase me-2"></i>Job Listings</h4>
        <p class="text-muted small mb-0">Showing all available job listings</p>
      </div>

      <!-- Desktop view -->
      <div class="table-responsive d-none d-md-block">
        <table class="table align-middle table-borderless table-hover bg-white rounded shadow-sm overflow-hidden">
          <thead class="table-light">
            <tr>
              <th class="ps-4">Title</th>
              <th class="text-center">Status</th>
              <th class="text-end pe-4">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% jobs.forEach(job => { %>
              <tr class="border-bottom">
                <td class="ps-4 py-3 fw-semibold"><%= job.title %></td>
                <td class="text-center">
                  <span class="badge rounded-pill <%= job.status === 'Closed' ? 'bg-danger' : 'bg-success' %>">
                    <i class="bi <%= job.status === 'Closed' ? 'bi-x-circle' : 'bi-check-circle' %> me-1"></i>
                    <%= job.status %>
                  </span>
                </td>
                <td class="text-end pe-4">
                  <% if (job.status !== 'Closed') { %>
                    <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#closeJobModal-<%= job._id %>">
                      Close Job
                    </button>
                  <% } else { %>
                    <span class="text-muted small fst-italic">No actions available</span>
                  <% } %>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>

      <!-- Mobile view -->
      <div class="d-md-none">
        <% jobs.forEach(job => { %>
          <div class="border bg-white rounded shadow-sm p-3 mb-3">
            <div class="d-flex justify-content-between align-items-center mb-2">
              <h6 class="mb-0 fw-semibold"><%= job.title %></h6>
              <span class="badge rounded-pill <%= job.status === 'Closed' ? 'bg-danger' : 'bg-success' %>">
                <i class="bi <%= job.status === 'Closed' ? 'bi-x-circle' : 'bi-check-circle' %> me-1"></i>
                <%= job.status %>
              </span>
            </div>
            <% if (job.status !== 'Closed') { %>
              <button class="btn btn-outline-danger btn-sm w-100" data-bs-toggle="modal" data-bs-target="#closeJobModal-<%= job._id %>">
                <i class="bi bi-lock me-1"></i>Close Job
              </button>
            <% } else { %>
              <p class="text-muted small fst-italic mb-0">No actions available</p>
            <% } %>
          </div>
        <% }); %>
      </div>
    </div>

    <!-- Freelancer Messages -->
    <div class="mb-5">
      <h4 class="mb-3"><i class="bi bi-envelope me-2"></i>Messages from Freelancers</h4>
      <ul class="list-group shadow-sm">
        <% uniqueSenders.forEach(freelancer => { %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              <strong><%= freelancer.name %></strong><br>
              <small class="text-muted"><%= freelancer.email %></small>
            </div>
            <a href="/chat/<%= freelancer._id %>" class="btn btn-sm btn-outline-primary">
              <i class="bi bi-chat-dots me-1"></i>Chat
            </a>
          </li>
        <% }) %>
      </ul>
    </div>

    <!-- Close Job Modals -->
    <% jobs.forEach(job => { %>
      <% if (job.status !== 'Closed') { %>
        <div class="modal fade" id="closeJobModal-<%= job._id %>" tabindex="-1" aria-labelledby="closeJobModalLabel-<%= job._id %>" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="closeJobModalLabel-<%= job._id %>">Confirm Close Job</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                Are you sure you want to close the job "<strong><%= job.title %></strong>"?
              </div>
              <div class="modal-footer">
                <form method="POST" action="/closeJob/<%= job._id %>">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                  <button type="submit" class="btn btn-danger">Yes, Close Job</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    <% }); %>

  </div>
</body>
