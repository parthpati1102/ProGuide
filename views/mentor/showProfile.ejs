<%- layout('/layouts/boilerplate.ejs') -%>

<div class="container my-5">
  <div class="mentor-dashboard p-4 p-md-5 bg-white shadow rounded-4">

    <!-- Profile Header -->
    <div class="row align-items-center mb-4">
      <div class="col-md-auto text-center text-md-start mb-3 mb-md-0">
        <img src="<%= mentor.userId.profilePicture.url %>" alt="Mentor Profile Picture" class="rounded-circle shadow" style="width: 120px; height: 120px; object-fit: cover;">
      </div>
      <div class="col-md">
        <div class="d-flex justify-content-between flex-wrap align-items-center">
          <div>
            <h2 class="fw-bold mb-1"><%= mentor.userId.name %></h2>
            <p class="text-muted mb-2"><%= mentor.userId.email %></p>
          </div>
          <div class="d-flex gap-2 flex-wrap">
            <% if (currUser.role === "Mentor") { %>
              <button class="btn btn-outline-success position-relative" data-bs-toggle="offcanvas" data-bs-target="#sessionRequests">
                <i class="fas fa-bell"></i>
                <% if (sessionRequests.length > 0) { %>
                  <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                    <%= sessionRequests.length %>
                  </span>
                <% } %>
              </button>
              <a href="/auth/google" class="btn btn-primary">
                <i class="bi bi-calendar-plus me-1"></i> Connect Calendar
              </a>
            <% } else if (currUser.role === "Mentee") { %>
              <a href="/chat/<%= mentor._id %>" class="btn btn-primary">Chat</a>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <!-- Profile Information -->
    <div class="row row-cols-1 row-cols-md-2 g-4">
      <div class="col">
        <div class="border rounded-3 p-4 h-100">
          <h5 class="fw-semibold mb-3">Profile Information</h5>
          <p><strong>Availability:</strong> <%= mentor.availability %></p>
          <p><strong>Bio:</strong> <%= mentor.bio %></p>
          <p><strong>Goals:</strong> <%= mentor.goals %></p>
        </div>
      </div>
      <div class="col">
        <div class="border rounded-3 p-4 h-100">
          <h5 class="fw-semibold mb-3">Additional Details</h5>
          <p><strong>Education:</strong> <%= mentor.education %></p>
          <p><strong>Experience:</strong> <%= mentor.experience %></p>
          <p><strong>Session Fee:</strong> â‚¹<%= mentor.sessionFee %></p>
        </div>
      </div>
    </div>

    <!-- Skills Section -->
    <div class="border rounded-3 p-4 mt-4">
      <h5 class="fw-semibold mb-3">Skills</h5>
      <% mentor.skills.forEach(skill => { %>
        <span class="badge bg-secondary me-2 mb-2 p-2 fs-6"><%= skill %></span>
      <% }); %>
    </div>

    <!-- Upcoming Sessions -->
    <% if (currUser.role === "Mentor" && upcomingSessions.length > 0) { %>
      <div class="border rounded-3 p-4 mt-4">
        <h5 class="fw-semibold mb-3">Upcoming Sessions</h5>
        <div class="list-group">
          <% upcomingSessions.forEach(session => { %>
            <div class="list-group-item list-group-item-action mb-3 border rounded shadow-sm">
              <p class="mb-1"><strong>Date:</strong> <%= new Date(session.date).toDateString() %></p>
              <p class="mb-1"><strong>Time:</strong> <%= session.time %></p>
              <p class="mb-1"><strong>Mentee:</strong> <%= session.menteeId.name %> (<%= session.menteeId.email %>)</p>
              <% if (session.meetLink) { %>
                <p class="mb-1">
                  <strong>Meet Link:</strong>
                  <a href="<%= session.meetLink %>" class="text-primary fw-semibold" target="_blank"><%= session.meetLink %></a>
                </p>
              <% } %>
              <p class="mb-2">
                <strong>Starts in:</strong>
                <span class="countdown-timer text-danger fw-bold" data-start="<%= new Date(session.date).toISOString().split('T')[0] + ' ' + session.time %>">Calculating...</span>
              </p>
              <div class="d-flex gap-2">
                <button class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#cancelModal-<%= session._id %>">Cancel</button>
                <a href="/rescheduleSession/<%= session._id %>" class="btn btn-sm btn-success text-white">Reschedule</a>
              </div>
            </div>

            <!-- Cancel Modal -->
            <div class="modal fade" id="cancelModal-<%= session._id %>" tabindex="-1">
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content rounded-4 shadow">
                  <div class="modal-header">
                    <h5 class="modal-title">Cancel Session</h5>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                  </div>
                  <div class="modal-body">Are you sure you want to cancel this session? This cannot be undone.</div>
                  <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                    <form method="POST" action="/cancelSession/<%= session._id %>">
                      <button type="submit" class="btn btn-danger">Yes, Cancel</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    <% } %>

    <!-- Recent Chats -->
   <% if (uniqueSenders && uniqueSenders.length > 0) { %>
    <div class="border rounded-3 p-4 mt-4 shadow-sm">
        <h5 class="fw-semibold mb-3">
        <i class="bi bi-chat-dots-fill me-2 text-success"></i>Recent Conversations
        </h5>
        <div class="list-group">
        <% uniqueSenders.forEach(sender => { %>
            <a href="/chat/<%= sender._id %>" class="list-group-item list-group-item-action d-flex align-items-center gap-3 py-3">
            <i class="bi bi-person-circle fs-4 text-secondary"></i>
            <div class="flex-grow-1">
                <span class="fw-semibold text-dark"><%= sender.name %></span>
            </div>
            <i class="bi bi-arrow-right-circle-fill text-success fs-5"></i>
            </a>
        <% }); %>
        </div>
    </div>
    <% } %>

    <!-- Edit/Delete -->
    <% if (currUser.role === "Mentor") { %>
      <div class="text-center mt-5">
        <a href="/createProfile/<%= mentor.id %>/editProfile" class="btn btn-outline-success me-3">Edit Profile</a>
        <form method="POST" action="/deleteProfile?_method=DELETE" class="d-inline">
          <button class="btn btn-outline-danger">Delete Profile</button>
        </form>
      </div>
    <% } %>
  </div>
</div>

<!-- Session Requests Offcanvas -->
<div class="offcanvas offcanvas-end" tabindex="-1" id="sessionRequests">
  <div class="offcanvas-header border-bottom">
    <h5><i class="bi bi-calendar-check me-2"></i>Session Requests</h5>
    <button class="btn-close" data-bs-dismiss="offcanvas"></button>
  </div>
  <div class="offcanvas-body">
    <% if (sessionRequests.length > 0) { %>
      <% sessionRequests.forEach(request => { %>
        <div class="border p-3 rounded mb-3">
          <h6><%= request.menteeId.name %></h6>
          <p><i class="bi bi-envelope me-2"></i><%= request.menteeId.email %></p>
          <p><i class="bi bi-clock me-2"></i><%= request.formattedDate %> at <%= request.time %></p>
          <div class="d-flex justify-content-end gap-2">
            <form method="POST" action="/acceptSession/<%= request._id %>">
              <button class="btn btn-sm btn-success text-white"><i class="bi bi-check2"></i> Accept</button>
            </form>
            <form method="POST" action="/declineSession/<%= request._id %>">
              <button class="btn btn-sm btn-danger"><i class="bi bi-x"></i> Decline</button>
            </form>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <div class="text-center mt-5">
        <i class="bi bi-calendar-x fs-1 text-muted"></i>
        <p class="text-muted mt-3">No new session requests at the moment.</p>
      </div>
    <% } %>
  </div>
</div>

<!-- Countdown Script -->
<script>
  function convertToDate(dateStr) {
    const [datePart, timePart, ampm] = dateStr.split(/\s+/);
    const [year, month, day] = datePart.split('-').map(Number);
    let [hour, minute] = timePart.split(':').map(Number);
    if (ampm === 'PM' && hour !== 12) hour += 12;
    if (ampm === 'AM' && hour === 12) hour = 0;
    return new Date(year, month - 1, day, hour, minute);
  }

  function updateCountdowns() {
    const timers = document.querySelectorAll('.countdown-timer');
    timers.forEach(timer => {
      const startTime = convertToDate(timer.dataset.start);
      const now = new Date();
      const diff = startTime - now;
      if (diff <= 0) {
        timer.innerText = "Session Started";
        return;
      }
      const days = Math.floor(diff / (1000 * 60 * 60 * 24));
      const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((diff % (1000 * 60)) / 1000);
      timer.innerText = `${days}d : ${hours}h : ${minutes}m : ${seconds}s`;
    });
  }

  setInterval(updateCountdowns, 1000);
  updateCountdowns();
</script>
