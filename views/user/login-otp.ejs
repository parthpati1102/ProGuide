<%- layout('/layouts/boilerplate.ejs') -%>
<div class="d-flex justify-content-center align-items-center min-vh-100" style="background: #f8f9fa;">
  <div class="forgot-container" style="width:100%; max-width:400px;">
    <div class="card shadow">
      <div class="card-header text-center bg-white border-0">
        <i class="bi bi-key-fill d-block fs-1 text-success"></i>
        <h2 class="mb-0" style="color: #212529;">Login with OTP</h2>
        <p class="mb-0 mt-2 opacity-75" style="color: #495057;">Get a secure login code sent to your email</p>
      </div>
      <div class="card-body">
        <p class="text-muted mb-4 text-center">
          Enter your registered email address and we'll send you a one-time password (OTP) for login.
        </p>
        <form action="/send-otp" method="POST">
          <div class="mb-3">
            <label for="email" class="form-label">
              <i class="bi bi-envelope-fill me-2 text-success"></i>Email address:
            </label>
            <input type="email" name="email" id="email" class="form-control" required placeholder="example@email.com">
          </div>
          <div class="d-grid">
            <button type="submit" class="btn btn-primary btn-lg">
              <i class="bi bi-send me-2"></i>Send OTP
            </button>
          </div>
        </form>
        <div class="info-box mt-4 text-center">
          <i class="bi bi-info-circle me-2"></i>
          You will receive an email with your OTP. Enter it within 5 minutes to log in.
        </div>
      </div>
    </div>
  </div>
</div>