<%- layout('/layouts/boilerplate.ejs') -%>
<div class="d-flex justify-content-center align-items-center min-vh-100" style="background: #f8f9fa; padding-top: 60px; padding-bottom: 60px;">
  <div class="forgot-container" style="width:100%; max-width:400px;">
    <div class="card shadow">
      <div class="card-header text-center bg-white border-0">
        <i class="bi bi-key-fill d-block fs-1 text-success"></i>
        <h2 class="mb-0" style="color: #212529;">Reset Password</h2>
        <p class="mb-0 mt-2 opacity-75" style="color: #495057;">Enter your new password below</p>
      </div>
      <div class="card-body">
        <form action="/reset-password/<%= token %>" method="POST">
          <div class="mb-3">
            <label for="password" class="form-label">
              <i class="bi bi-lock me-2 text-success"></i>New Password:
            </label>
            <input type="password" name="password" id="password" class="form-control" required placeholder="Enter new password">
          </div>
          <div class="d-grid">
            <button type="submit" class="btn btn-success btn-lg">
              <i class="bi bi-arrow-repeat me-2"></i>Reset Password
            </button>
          </div>
        </form>
        <div class="info-box mt-4 text-center">
          <i class="bi bi-info-circle me-2"></i>
          After resetting, you will be automatically logged in.
        </div>
      </div>
    </div>
  </div>
</div>