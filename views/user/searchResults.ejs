<%- layout('/layouts/boilerplate.ejs') -%>
<body>
    <div class="container py-5">
        <!-- Search Header -->
        <div class="search-header">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="search-title">
                    <i class="bi bi-search me-2"></i>Search Results
                </h2>
            </div>
        </div>
        
        <!-- Job Listings -->
        <h3 class="section-title">
            <i class="bi bi-briefcase me-2"></i>Available Jobs
        </h3>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-5">
            <% jobs.forEach(job => { %>
            <div class="col">
                <div class="card h-100 border-0 shadow-sm hover-shadow transition">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex align-items-center mb-3">
                            <div class="employer-img rounded-circle me-3 bg-light">
                                <i class="bi bi-building"></i>
                            </div>
                            <div>
                                <h5 class="card-title mb-0"><%= job.title %></h5>
                                <p class="text-muted mb-0"><small><%= job.employerId.name %></small></p>
                            </div>
                        </div>
                        
                        <div class="mb-3 flex-grow-1">
                            <p class="mb-2">Budget: <span class="fw-medium">â‚¹<%= job.budget %></span></p>
                            
                            <p class="mb-1">Skills Required:</p>
                            <div class="skills-list">
                                <% job.requiredSkills.forEach(skill => { %>
                                <span class="skill-badge"><%= skill %></span>
                                <% }) %>
                            </div>
                        </div>
                        
                        <div class="mt-auto">
                            <% if (isLoggedIn) { %>
                            <form action="/jobs/<%= job._id %>/apply" method="POST">
                                <button class="btn btn-outline-success w-100">Apply Now</button>
                            </form>
                            <% } else { %>
                            <div class="login-prompt">
                                <i class="bi bi-lock me-2"></i>Login to apply for jobs
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>

        <!-- Mentor Listings -->
        <h3 class="section-title">
            <i class="bi bi-person-check me-2"></i>Available Mentors
        </h3>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <% mentors.forEach(mentor => { %>
            <div class="col">
                <div class="card h-100 border-0 shadow-sm hover-shadow transition">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex align-items-center mb-3">
                            <img src="<%= mentor.userId.profilePicture ? mentor.userId.profilePicture.url : '/placeholder.svg?height=60&width=60' %>" 
                                 alt="<%= mentor.userId.name %>" 
                                 class="mentor-img rounded-circle me-3">
                            <div>
                                <h5 class="card-title mb-0"><%= mentor.userId.name %></h5>
                                <p class="text-muted mb-0"><small><%= mentor.expertise || mentor.skills.join(", ") %></small></p>
                            </div>
                        </div>
                        
                        <p class="card-text flex-grow-1"><%= mentor.bio || "Expert mentor available to guide you through your learning journey." %></p>
                        
                        <div class="mt-auto">
                            <p class="mb-2">
                                <span class="availability-badge <%= mentor.availability === 'Available' ? 'available' : '' %>">
                                    <i class="bi bi-calendar-check me-2"></i>
                                    Availability: <%= mentor.availability || "Available" %>
                                </span>
                            </p>
                            
                            <% if (isLoggedIn) { %>
                                <div class="d-flex align-items-center gap-2">
                                    <% if (!mentor.availability || mentor.availability === "Available") { %>
                                    <form action="/scheduleSession/<%= mentor._id %>" method="POST" class="d-inline flex-grow-1">
                                        <button class="btn btn-outline-success w-100">Connect</button>
                                    </form>
                                    <% } %>
                                    <a href="/showProfile/<%= mentor._id %>" class="btn btn-outline-success flex-grow-1">View Profile</a>
                                </div>
                            <% } else { %>
                                <div class="login-prompt">
                                    <i class="bi bi-lock me-2"></i>Login to connect with mentors
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
            
            <% if (mentors.length === 0) { %>
            <div class="col-12">
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle me-2"></i>No mentors found matching your search criteria.
                </div>
            </div>
            <% } %>
        </div>
    </div>
</body>